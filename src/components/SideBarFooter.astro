  <a
    class="mx-3"
    aria-label="Light-Dark mode"
    title="Light-Dark mode"
  >
    <label class="swap swap-rotate">
      <input
    id="theme-toggle-checkbox"
    type="checkbox"
    onClick="toggleTheme()"
  />
      <!-- Icono de Sol (cuando está en "swap-on") -->
      <svg class="swap-on fill-current w-6 h-6" viewBox="0 0 24 24">
        <path d="M5.64 17.36A9 9 0 1118 5.64 9 9 0 015.64 17.36z" />
      </svg>
      <!-- Icono de Luna (cuando está en "swap-off") -->
      <svg class="swap-off fill-current w-6 h-6" viewBox="0 0 24 24">
        <path d="M21.64 13A9 9 0 1111 3.36 7 7 0 0021.64 13z" />
      </svg>
    </label>
  </a>
</div>

<script is:inline>
  function toggleTheme() {
    const html = document.documentElement;
    const currentTheme = html.getAttribute('data-theme');
    // Si estaba dark, pasamos a lofi; si estaba lofi, pasamos a dark
    const newTheme = currentTheme === 'dark' ? 'lofi' : 'dark';

    html.setAttribute('data-theme', newTheme);
    localStorage.setItem('theme', newTheme);

    const checkbox = document.getElementById('theme-toggle-checkbox');
    // Si el nuevo tema es dark => checked = true => se verá la luna
    checkbox.checked = (newTheme === 'dark');
  }
</script>
