---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Notes" sideBarActiveItemID="notes">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Notes</div>
  </div>

  <HorizontalCard
    title="Primero"
    img="/Primero.gif"
    desc="Aquí encontrarás todos los apuntes de Ingeniería Informática de primero."
    url="/notes/Primero"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Segundo"
    img="/Segundo.gif"
    desc="Aquí encontrarás todos los apuntes de Ingeniería Informática de segundo."
    url="/notes/Segundo"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Tercero"
    img="/Tercero.gif"
    desc="Aquí encontrarás todos los apuntes de Ingeniería Informática de tercero."
    url="/notes/Tercero"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Cuarto"
    img="/Cuarto.gif"
    desc="Aquí encontrarás todos los apuntes de Ingeniería Informática de cuarto."
    badge="UPCOMING"
    url="/notes/Cuarto"
  />
  
</BaseLayout>
